<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Encuesta</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body class="bg-light">
    <div class="container p-4">
        <div class="card shadhow p-2">
            <div class="card-body">
                <h1 class="card-title text-center p-3">Encuesta para el usuario</h1>
                <% if(encuesta) {%>
                    <form action="/encuesta" method="post">
                        <div class="d-flex flex-column justify-content-start align-items-start gap-2">
                            <% encuesta.forEach((pregunta, indicePregunta)=> {%>
                                <h2 class="text-start fw-bold">
                                    <%= indicePregunta+1 %>. <%= pregunta.pregunta %>
                                </h2>
                                <% pregunta.opciones.forEach((opcion, indiceOpcion)=> {%>
                                    <div class="form-check">
                                        <input type="radio" name="pregunta_<%= indicePregunta %>"
                                            value="<%= indiceOpcion %>"
                                            id="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>"
                                            class="form-check-input" required>
                                        <label for="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>">
                                            <%= opcion.opcion %>
                                        </label>
                                    </div>
                                    <% })%>
                                        <% })%>
                                    </div>
                                    <div class="d-flex flex-row justify-content-center align-items- p-3">
                                        <button type="submit" class="btn btn-primary btn-lg"> Enviar
                                            formulario</button>
                                    </div>
                                </form>
                    <% } else {%>
                        <h2 class="text-center fw-bold"> No hay preguntas disponibles aun</h2>
                        <% } %>

            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>