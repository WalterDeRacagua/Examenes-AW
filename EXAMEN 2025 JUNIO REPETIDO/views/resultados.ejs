<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados de la encuesta</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <%- include('header') %>
        <div class="container p-3">
            <div class="card shadow">
                <div class="card-body p-3">
                    <h1 class="card-title text-center text-primary"> Resultados de la encuesta</h1>
                    <% if(encuesta){%>
                        <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                            <% encuesta.forEach((pregunta, indicePregunta)=> {%>
                                <h2 class="fw-bold text-start">
                                    <%= indicePregunta +1 %>. <%= pregunta.pregunta %>
                                </h2>
                                <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                                    <% pregunta.opciones.forEach((opcion, indiceOpcion)=> {%>
                                        <p class="text-start">
                                            <span class="fw-bold"> <%= indicePregunta +1 %>.<%= indiceOpcion +1 %>.</span>
                                                <%= opcion.opcion %>:
                                            <span class="fw-bold"> <%= opcion.votos %></span>
                                        </p>
                                        <% })%>
                                </div>
                                <% })%>
                        </div>
                        <div class="d-flex flex-row justify-content-center align-items-center mt-3 gap-2">
                            <a href="/encuesta" class="btn btn-primary btn-lg" role="button">Volver a la encuesta</a>
                        </div>
                        <% } else {%>
                            <h2 class="text-danger text-center"> No hay ninguna encuesta disponible </h2>
                            <% } %>
                </div>
            </div>
        </div>
        <script src="/js/bootstrap.bundle.min.js"></script>
        <script src="/js/modal.js"></script>
</body>

</html>