<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encuesta</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <%- include('header') %>
        <div class="container p-3">
            <div class="card shadow">
                <div class="card-body p-3">
                    <h1 class="card-title text-center text-primary"> Encuesta a los usuarios</h1>
                    <% if(encuesta){%>
                        <form action="/encuesta" method="post">
                            <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                                <% encuesta.forEach((pregunta, indicePregunta) => {%>
                                    <h2 class="fw-bold text-start">
                                        <%= indicePregunta +1 %>. <%= pregunta.pregunta %>
                                    </h2>
                                    <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                                        <% pregunta.opciones.forEach((opcion, indiceOpcion) => {%>
                                            <div class="form-check">
                                                <input type="radio" class="form-check-input" name="pregunta_<%= indicePregunta %>"
                                                    value="<%= indiceOpcion %>"
                                                    id="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>" required>
                                                    <label for="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>" class="form-check-label">
                                                        <%= opcion.opcion %>
                                                    </label>
                                            </div>
                                            <% })%>
                                    </div>
                                    <% })%>
                            </div>
                              <div class="d-flex flex-row justify-content-center align-items-center mt-3 gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Enviar encuesta</button>
                                <a href="/encuesta/resultados" class="btn btn-outline-primary btn-lg" role="button"> Ver resultados</a>
                            </div>
                        </form>
                        <% } else {%>
                            <h2 class="text-danger text-center"> No hay ninguna encuesta disponible </h2>
                            <% } %>
                </div>
            </div>
        </div>
        <script src="/js/bootstrap.bundle.min.js"></script>
        <script src="/js/modal.js"></script>
</body>

</html>