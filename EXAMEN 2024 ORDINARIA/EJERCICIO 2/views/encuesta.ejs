<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Encuesta sobre libros</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <div class="container p-3">
        <div class="card shadow galeria">
            <div class="card-body p-2">
                <div class="card-title d-flex flex-column justify-content-center align-items-center p-2 gap-2">
                    <h1 class="card-title text-center fw-bold"> Encuesta sobre libros </h1>
                </div>
                <% if(encuesta) {%>
                    <form action="/encuesta" method="post" >
                        <div class="d-flex flex-column justify-content-start align-items-start gap-3 p-2">
                            <% encuesta.forEach((pregunta, indicePregunta)=> {%>
                                <h2 class="text-start fw-bold">
                                    <%= indicePregunta+1 %>. <%= pregunta.pregunta %>
                                </h2>
                                <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                                    <% pregunta.opciones.forEach((opcion, indiceOpcion)=> {%>
                                        <div class="form-check">
                                            <input type="radio" id="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>"
                                                name="pregunta_<%= indicePregunta %>" value="<%= indiceOpcion %>"
                                                class="form-check-input" required>
                                            <label for="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>"
                                                class="form-check-label">
                                                <%= opcion.opcion %>
                                            </label>
                                        </div>
                                        <% })%>
                                </div>
                                <% })%>

                        </div>
                        <div class="d-flex flex-row justify-content-center align-items-center gap-2">
                            <button class="btn btn-primary btn-lg" type="submit"> Enviar encuesta </button>
                            <a href="/resultados" class="btn btn-outline-primary btn-lg" role="button"> Ver resultados de la encuesta</a>

                        </div>
                    </form>
                    <% } else {%>
                        <h2 class="text-center text-danger"> No hay ninguna encuesta disponible en este momento</h2>
                        <% } %>
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>


</html>