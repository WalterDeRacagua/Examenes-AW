<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encuesta</title>
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light">
    <div class="container d-flex justify-content-center m-4">
        <div class="card p-3">
            <div class="card-title p-2">
                <h1 class="title text-center">
                    Encuesta
                </h1>
            </div>
            <div class="card-body p-2 mb-2">
                <% if (pregunta) { %>
                    <h2 class="text-center"><strong>
                            <%= pregunta %>
                        </strong></h2>
                    <% } %>

                        <form action="/votar" method="get" id="formEncuesta">
                            <div class="actions d-flex flex-column p-2">
                                <% opciones.forEach((opcion, index)=> { %>
                                    <label class="form-label">
                                        <input type="radio" name="opcion" value="<%= index %>" class="form-check-input"
                                            required>
                                        <span class="option-text">
                                            <%= opcion.texto %>
                                        </span>
                                    </label>
                                    <% }) %>
                            </div>
                            <div class="d-flex justify-content-center gap-3">
                                <button type="submit" class="btn btn-primary ">Enviar</button>
                                <a href="/resultados" class="btn btn-danger" role="button"> Ver resultados</a>
                            </div>
                        </form>

            </div>
        </div>
    </div>
</body>

</html>