<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Resultados</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body class="bg-light">
    <div class="container p-2">
        <div class="card shadow">
            <div class="card-body p-3">
                <h1 class="card-title text-center text-primary">
                    Resultados de la encuesta de satisfacci√≥n del cliente
                </h1>
                <% if(encuesta) {%>
                    <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                        <% encuesta.forEach((pregunta, indicePregunta)=> { %>
                            <h2 class="text-start fw-bold">
                                <%= indicePregunta+1 %>. <%= pregunta.pregunta %>
                            </h2>
                            <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                                <% pregunta.opciones.forEach((opcion, indiceOpcion)=> { %>
                                    <div class="d-flex flex-row justify-content-start align-items-start p-2 gap-2">
                                        <p class="text-start"> <span class="fw-bold">
                                                <%= indicePregunta+1 %>. <%= indiceOpcion+1 %>.
                                            </span>
                                            <%= opcion.opcion %>: <span class="fw-bold">
                                                    <%= opcion.votos %>
                                                </span>
                                        </p>
                                    </div>
                                    <% }) %>
                            </div>
                            <% }) %>

                    </div>
                    <div class="d-flex flex-row justify-content-center align-items-center gap-3">
                        <a href="/" class="btn btn-outline-primary btn-lg" role="button"> Volver a la encuesta </a>
                    </div>
                    <% }else {%>
                        <h2 class="text-center text-danger fw-bold"> De momento no se ha enviado ninguna encuesta </h2>
                        <% }%>

            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>