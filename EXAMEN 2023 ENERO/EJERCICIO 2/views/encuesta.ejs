<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Encuesta</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body class="bg-light">
    <div class="container p-2">
        <div class="card shadow">
            <div class="card-body p-3">
                <h1 class="card-title text-center text-primary">
                    Encuesta de satisfacci√≥n del cliente
                </h1>
                <% if(encuesta) {%>
                    <form action="/" method="post">
                        <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                            <% encuesta.forEach((pregunta, indicePregunta)=> { %>
                                <h2 class="text-start fw-bold">
                                    <%= indicePregunta+1 %>. <%= pregunta.pregunta %>
                                </h2>
                                <div class="d-flex flex-column justify-content-start align-items-start gap-3">
                                    <% pregunta.opciones.forEach((opcion, indiceOpcion)=> { %>
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input"
                                                name="pregunta_<%= indicePregunta %>"
                                                id="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>"
                                                value="<%= indiceOpcion %>" required>
                                            <label for="pregunta_<%= indicePregunta %>_<%= indiceOpcion %>"
                                                class="form-check-label">
                                                <%= opcion.opcion %>
                                            </label>
                                        </div>
                                        <% }) %>
                                </div>
                                <% }) %>

                        </div>
                        <div class="d-flex flex-row justify-content-center align-items-center gap-3">
                            <button type="submit" class="btn btn-primary btn-lg"> Enviar </button>
                            <a href="/resultados" class="btn btn-outline-primary btn-lg" role="button"> Ver
                                resultados</a>
                        </div>
                    </form>
                    <% }else {%>
                        <h2 class="text-center text-danger fw-bold"> No hay preguntas disponibles en la encuesta </h2>
                        <% }%>

            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>